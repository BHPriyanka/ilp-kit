    "babel-loader": "^5.3.3",
    "babel-plugin-typecheck": "^2.0.0",
    "classnames": "^2.2.3",
    "co": "^4.6.0",
    "compression": "^1.6.0",
    "constitute": "^1.6.2",
    "express": "^4.13.3",
    "file-loader": "^0.8.5",
    "five-bells-sender": "^4.3.0",
    "five-bells-shared": "^8.5.0",
    "history": "^1.17.0",
    "http-proxy": "^1.12.0",
    "kcors": "^1.0.1",
    "koa": "^1.1.2",
    "koa-body": "^1.4.0",
    "koa-mag": "^1.1.0",
    "koa-passport": "^1.2.0",
    "koa-router": "^5.3.0",
    "koa-session": "^3.3.1",
    "less": "^2.6.0",
    "less-loader": "^2.2.2",
    "lodash": "^3.10.1",
    "mag": "^0.9.1",
    "mag-hub": "^0.1.1",
    "node-sass": "^3.3.3",
    "passport-local": "^1.0.0",
    "pg": "^4.4.4",
    "piping": "^0.3.0",
    "pretty-error": "^1.2.0",
    "query-string": "^3.0.0",
    "react": "^0.14.7",
    "react-bootstrap": "^0.28.2",
    "react-document-meta": "^2.0.0",
    "react-dom": "^0.14.1",
    "react-redux": "^4.2.1",
    "react-router": "^1.0.3",
    "react-router-bootstrap": "^0.19.3",
    "redux": "^3.2.1",
    "redux-form": "^3.0.0",
    "scroll-behavior": "^0.3.0",
    "sequelize": "^3.17.1",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "superagent": "^1.4.0",
    "superagent-promise": "^1.1.0",
    "url-loader": "^0.5.6",
    "uuid4": "^1.0.0",
    "webpack-isomorphic-tools": "^2.2.4"
  },
  "devDependencies": {
